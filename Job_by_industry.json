{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Multiple job-holding rate by industry with filter for Top 10 or All industries",
  "title": {
    "text": "Multiple Job-Holding Rate by Industry",
    "fontSize": 16,
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/VSWijaya/Assignment2/refs/heads/main/job_by_ind.csv"
  },
  "params": [
    {
      "name": "industryFilter",
      "value": "Top 10",
      "bind": {
        "input": "select",
        "options": ["Top 10", "All"],
        "labels": ["Top 10 Industries", "All Industries"],
        "name": "Show: "
      }
    }
  ],
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Rate", "order": "descending"}]
    },
    {
      "filter": "industryFilter == 'All' || datum.rank <= 10"
    }
  ],
  "width": 400,
  "height": 400,
  "mark": {"type": "bar", "color": "#1f77b4"},
  "encoding": {
    "y": {
      "field": "Industry",
      "type": "nominal",
      "sort": {"field": "Rate", "order": "descending"},
      "title": "Industry"
    },
    "x": {
      "field": "Rate",
      "type": "quantitative",
      "title": "Multiple Job-Holding Rate (%)"
    },
    "tooltip": [
      {"field": "Industry", "type": "nominal", "title": "Industry"},
      {"field": "Rate", "type": "quantitative", "format": ".1f", "title": "Rate (%)"}
    ]
  }
}
