{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Multiple Job-Holders: Levels (bars) and Rate (line) over time",
  "title": {
    "text": "Multiple Job-Holders: Population and Rate Over Time",
    "subtitle": "1994-2024",
    "fontSize": 16,
    "anchor": "middle"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/VSWijaya/Assignment2/refs/heads/main/job_rate_ts.csv",
    "format": {
      "type": "csv",
      "parse": {"Date": "utc:%b-%y"}
    }
  },

  "params": [
    {
      "name": "minYear",
      "value": 1994,
      "bind": {"input": "range", "min": 1994, "max": 2024, "step": 1, "name": "From: "}
    },
    {
      "name": "maxYear",
      "value": 2024,
      "bind": {"input": "range", "min": 1994, "max": 2024, "step": 1, "name": "To: "}
    }
  ],
  "transform": [
    {"calculate": "year(datum.Date)", "as": "Year"},
    {"filter": "datum.Year >= minYear && datum.Year <= maxYear"}
  ],

  "layer": [
    {
      "mark": {"type": "bar", "color": "#003f87", "opacity": 0.5},
      "encoding": {
        "x": {"field": "Date", "type": "temporal", "title": "Date"},
        "y": {
          "field": "Levels",
          "type": "quantitative",
          "title": "Multiple job-holder Population ('000)",
          "axis": {"orient": "left"}
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Date"},
          {"field": "Levels", "type": "quantitative", "title": "Population ('000)"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "#e74c3c",
        "strokeWidth": 2.5,
        "point": {"filled": true, "color": "#e74c3c"}
      },
      "encoding": {
        "x": {"field": "Date", "type": "temporal"},
        "y": {
          "field": "Rate",
          "type": "quantitative",
          "title": "Multiple job-holding rate (%)",
          "axis": {"orient": "right"}
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Year"},
          {"field": "Rate", "type": "quantitative", "title": "Rate (%)"}
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "gray",
        "strokeDash": [4, 4]
      },
      "encoding": {
        "x": {"datum": {"year": 2020, "month": 5, "date": 1}, "type": "temporal"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -20,
        "color": "gray",
        "fontSize": 12
      },
      "encoding": {
        "x": {"datum": {"year": 2020, "month": 5, "date": 1}, "type": "temporal"},
        "y": {"datum": 5.5},
        "text": {"value": "Dip due to COVID-19 restrictions"}
      }
    }
  ],

  "width": 600,
  "height": 400,
  "resolve": {"scale": {"y": "independent"}}
}
