{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Multiple Job-Holders: Levels (bars) and Rate (line) over time",
  "title": {
    "text": "Multiple Job-Holders: Population and Rate Over Time",
    "subtitle": "1994-2024",
    "fontSize": 16,
    "anchor": "middle"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/VSWijaya/Assignment2/refs/heads/main/job_rate_ts.csv",
    "format": {
      "type": "csv",
      "parse": {"Date": "utc:%b-%y"}
    }
  },
  "layer": [
    {
      "mark": {"type": "bar", "color": "#003f87", "opacity": 0.5, "tooltip": true},
      "encoding": {
        "x": {"field": "Date", "type": "temporal", "title": "Date"},
        "y": {
          "field": "Levels",
          "type": "quantitative",
          "title": "Multiple job-holder Population ('000)",
          "axis": {"orient": "left"}
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Date"},
          {"field": "Levels", "type": "quantitative", "title": "Population"}
        ]
      }
    },
    {
      "mark": {"type": "line", "point": {"color": "#e74c3c", "size": 25}, "color": "#e74c3c", "strokeWidth": 2.5, "tooltip": true},
      "encoding": {
        "x": {"field": "Date", "type": "temporal"},
        "y": {
          "field": "Rate",
          "type": "quantitative",
          "title": "Multiple job-holding rate (%)",
          "axis": {"orient": "right"}
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Year"},
          {"field": "Rate", "type": "quantitative", "title": "Rate (%)"}
        ]
      }
    }
  ],
  "width": 600,
  "height": 400,
  "resolve": {"scale": {"y": "independent"}}
}
